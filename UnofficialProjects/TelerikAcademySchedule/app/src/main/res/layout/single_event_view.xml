    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Type: "
            android:id="@+id/tvTypeLabel"
            android:textSize="23dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lecture"
            android:id="@+id/tvType"
            android:textSize="23dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tvTypeLabel"
            android:layout_toEndOf="@+id/tvTypeLabel"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Date: "
            android:id="@+id/tvDateLabel"
            android:layout_below="@+id/tvType"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="23dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tvDate"
            android:layout_below="@+id/tvType"
            android:layout_alignLeft="@+id/tvType"
            android:layout_alignStart="@+id/tvType"
            android:textSize="23dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Hour: "
            android:id="@+id/tvHourLabel"
            android:layout_below="@+id/tvDate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="23dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tvHour"
            android:layout_below="@+id/tvDate"
            android:layout_alignLeft="@+id/tvDate"
            android:layout_alignStart="@+id/tvDate"
            android:textSize="23dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Description: "
            android:id="@+id/tvDescriptionLabel"
            android:layout_below="@+id/tvHour"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="23dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tvDescription"
            android:textSize="23dp"
            android:layout_below="@+id/tvDescriptionLabel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event finished."
            android:id="@+id/cbFinished"
            android:checked="false"
            android:textSize="23dp"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/tvDescription"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/buttonEdit"
            android:text="Edit event"
            android:background="@drawable/button_gradient"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textSize="23dp"
            android:textColor="#ff000000"
            android:layout_gravity="center"
            android:shadowDx="23"
            android:layout_alignTop="@+id/cbFinished"
            android:layout_alignLeft="@+id/cbFinished"
            android:layout_alignStart="@+id/cbFinished"
            android:layout_marginTop="60dp" />

        <Button
